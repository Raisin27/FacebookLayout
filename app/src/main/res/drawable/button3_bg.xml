        <shape android:shape="rectangle">
            <solid android:color="@color/button4" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button4" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:color="@color/bgBlack" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>
